<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:i_am.ViewModels"
             xmlns:models="clr-namespace:i_am.Models"
             x:Class="i_am.Views.RelationshipsPage"
             x:DataType="vm:RelationshipVM"
             Title="Moi podopieczni">

    <CollectionView ItemsSource="{Binding Relationships}"
                    EmptyView="Nie masz jeszcze zadnych podopiecznych"
                    Margin="20">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:CareRelationship">
                <Frame Margin="0,0,0,15" Padding="15" CornerRadius="10">
                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">

                        <Label Grid.Row="0" Grid.Column="0"
                               Text="{Binding DependentId}"
                               FontSize="18"
                               FontAttributes="Bold" />

                        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                               FontSize="14"
                               TextColor="Gray"
                               Margin="0,5,0,10">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Godzina check-in: " />
                                    <Span Text="{Binding CheckInTime, StringFormat='{0:hh}:{0:mm}'}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="10">
                            <TimePicker Time="{Binding Source={RelativeSource AncestorType={x:Type vm:RelationshipVM}}, Path=NewCheckInTime}"
                                        Format="HH:mm" />
                            <Button Text="Zmien godzine"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RelationshipVM}}, Path=UpdateCheckInTimeCommand}"
                                    CommandParameter="{Binding .}" />
                        </HorizontalStackLayout>

                        <Button Grid.Row="0" Grid.Column="1"
                                Text="Kalendarz"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RelationshipVM}}, Path=ViewCalendarCommand}"
                                CommandParameter="{Binding DependentId}" />

                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
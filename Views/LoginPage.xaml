<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:i_am.ViewModels"
             x:Class="i_am.Views.LoginPage"
             x:DataType="vm:UserVM"
             Title="Logowanie">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">
            
            <Label Text="I AM" 
                   FontSize="48" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}" />

            <Label Text="Monitorowanie samopoczucia" 
                   FontSize="16" 
                   HorizontalOptions="Center"
                   Margin="0,0,0,30" />

            <Entry Placeholder="Email" 
                   Text="{Binding Email}"
                   Keyboard="Email" />

            <Entry Placeholder="Haslo" 
                   Text="{Binding Password}"
                   IsPassword="True" />

            <Button Text="Zaloguj sie" 
                    Command="{Binding LoginCommand}"
                    Margin="0,20,0,0" />

            <Button Text="Nie masz konta? Zarejestruj sie" 
                    Command="{Binding GoToRegisterCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
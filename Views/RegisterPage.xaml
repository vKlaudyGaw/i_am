<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:i_am.ViewModels"
             x:Class="i_am.Views.RegisterPage"
             x:DataType="vm:UserVM"
             Title="Rejestracja">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

            <Label Text="Utworz konto" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <Entry Placeholder="Nazwa uzytkownika" 
                   Text="{Binding Username}" />

            <Entry Placeholder="Email" 
                   Text="{Binding Email}"
                   Keyboard="Email" />

            <Entry Placeholder="Numer telefonu" 
                   Text="{Binding PhoneNumber}"
                   Keyboard="Telephone" />

            <Entry Placeholder="Haslo" 
                   Text="{Binding Password}"
                   IsPassword="True" />

            <Label Text="Wybierz swoja role:" 
                   FontSize="16"
                   Margin="0,20,0,5" />

            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <RadioButton Content="Jestem opiekunem" 
                             IsChecked="{Binding IsCaregiver}"
                             GroupName="RoleGroup" />
                <RadioButton Content="Jestem podopiecznym" 
                             IsChecked="{Binding IsDependent}"
                             GroupName="RoleGroup" />
            </HorizontalStackLayout>

            <Button Text="Zarejestruj sie" 
                    Command="{Binding RegisterCommand}"
                    Margin="0,30,0,0" />

            <Button Text="Masz juz konto? Zaloguj sie" 
                    Command="{Binding GoToLoginCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>